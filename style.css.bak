@import url('https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap');
* {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
}
body {
	font-family: "Permanent Marker", cursive;

}
.header {
	background:#da0018;
	height: 100vh;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	gap: 50px;
}
.header__logo {
	background: url('./images/m.jpg');
	background-repeat: no-repeat;
	background-size: 100%;
	width: 200px;
	height: 200px;
	border-radius: 50%;
	cursor: pointer;
	box-shadow: 0 0 0 5px #76000d, 0 0 0 10px #ffffff;
	transition: border-radius 1s ease, box-shadow 1s 1s linear, 
	transform 0.5s 2s linear, background 1s 2s ease-out;
}
.header__name {
	color: #fff;
	font-size:130px;
	cursor: pointer;
	text-shadow: 2px 2px 0 #4A0008, -2px -2px 0 #4A0008;
	text-transform: uppercase;
	display: flex;
}
.header:hover header__logo {
	border-radius: 0px;
	box-shadow: 0 0 0 10px #fc0017, 0 0 0 20px #003f9f;
	transform: rotate(45deg) scale(1.05);
	background: url(./images/mario1.jpg);
}
.m{
	transform-origin: 0% 100%;
	transition: transform 1s 3 linear;
}
.header:hover .m {
	transform: scale(0.8) rotate(-45deg);
}
.a{
	transition: transform: 1s 3s ease-in-out;
}
.header:hover .a{
	transform: scale(1,2.3) skewX(45deg);
}
.r{
	transition: transform 1s 3s ease-in-out;
}
.header:hover .r{
	transform: rotateY(600deg);
}
.i{
	transform-origin: bottom-center;
	transition: transform 1s 3s ease-in-out;
}
.header:hover .i{
	transform: scale(0.1,0.1);
}
.o{
	transform 1s 3s ease-in-out;
}
.header:hover .o{
	transform: scale(2,0.5) translateY(-150px) rotateY(360deg);
}